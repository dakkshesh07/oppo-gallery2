<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.COUI" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/coui_textview_text_size</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:elegantTextHeight">@bool/coui_support_elegant_text_height</item>
    </style>
    <style name="Widget.COUI.EditText" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/coui_edittext_text_size</item>
        <item name="android:minHeight">@dimen/coui_edit_text_height_min</item>
        <item name="android:editTextColor">@color/coui_edit_text_color</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="collapsedTextColor">@color/coui_collapsed_text_color</item>
        <item name="couiDefaultStrokeColor">@color/coui_textinput_stroke_color_default</item>
        <item name="couiDisabledStrokeColor">@color/coui_textinput_stroke_color_disabled</item>
        <item name="couiEditTextDeleteIconNormal">@drawable/ic_edit_text_delete</item>
        <item name="couiEditTextDeleteIconPressed">@drawable/ic_edit_text_delete</item>
        <item name="couiStrokeColor">@color/coui_edit_text_color_focused</item>
    </style>
    <style name="Widget.COUI.EditText.Dark" parent="@style/Widget.COUI.EditText">
        <item name="android:textColorHint">@color/coui_edit_text_color_hint_black</item>
        <item name="collapsedTextColor">@color/coui_collapsed_text_dark_color</item>
        <item name="couiDefaultStrokeColor">@color/coui_textinput_stroke_color_default_dark</item>
        <item name="couiDisabledStrokeColor">@color/coui_textinput_stroke_color_disabled_dark</item>
        <item name="couiEditTextDeleteIconNormal">@drawable/ic_edit_text_delete</item>
        <item name="couiEditTextDeleteIconPressed">@drawable/ic_edit_text_delete</item>
        <item name="couiStrokeColor">@color/coui_edit_text_color_focused_black</item>
    </style>
    <style name="Widget.COUI.ExpandableListView" parent="@style/Widget.COUI.ListView">
        <item name="android:groupIndicator">@drawable/coui_expander_group</item>
        <item name="android:childDivider">@drawable/coui_divider_horizontal_default</item>
        <item name="android:indicatorStart">?android:expandableListPreferredItemIndicatorLeft</item>
        <item name="android:indicatorEnd">?android:expandableListPreferredItemIndicatorRight</item>
    </style>
    <style name="Widget.COUI.ProgressBar" parent="@style/Widget.COUI">
        <item name="android:maxWidth">48.0dip</item>
        <item name="android:maxHeight">48.0dip</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:minWidth">48.0dip</item>
        <item name="android:minHeight">48.0dip</item>
        <item name="android:mirrorForRtl">true</item>
    </style>
    <style name="Widget.COUI.SeekBar" parent="@style/Widget.COUI">
        <item name="android:paddingLeft">8.0dip</item>
        <item name="android:paddingRight">8.0dip</item>
        <item name="android:focusable">true</item>
        <item name="android:maxHeight">50.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/coui_progress_horizontal</item>
        <item name="android:progressDrawable">@drawable/coui_progress_horizontal</item>
        <item name="android:minHeight">50.0dip</item>
        <item name="android:thumb">@drawable/coui_seek_thumb</item>
        <item name="android:thumbOffset">8.0dip</item>
        <item name="android:mirrorForRtl">true</item>
    </style>
    <style name="Widget.COUI.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textAlignment">viewStart</item>
    </style>
    <style name="Widget.COUI.Toolbar" parent="@android:style/Widget">
        <item name="android:paddingLeft">@dimen/toolbar_normal_menu_padding_right</item>
        <item name="android:paddingRight">@dimen/toolbar_normal_menu_padding_left</item>
        <item name="android:minHeight">50.0dip</item>
        <item name="minTitleTextSize">16.0dip</item>
        <item name="supportButtonGravity">center_vertical</item>
        <item name="supportCollapseContentDescription">@string/support_abc_toolbar_collapse_description</item>
        <item name="supportCollapseIcon">?homeAsUpIndicator</item>
        <item name="supportContentInsetEnd">15.0dip</item>
        <item name="supportContentInsetStart">24.0dip</item>
        <item name="supportMaxButtonHeight">50.0dip</item>
        <item name="supportSubtitleTextAppearance">@style/TextAppearance.COUI.AppCompatSupport.Toolbar.SubTitle</item>
        <item name="supportTitleMarginBottom">1.0dip</item>
        <item name="supportTitleMarginTop">4.0dip</item>
        <item name="supportTitleMargins">0.0dip</item>
        <item name="supportTitleTextAppearance">@style/TextAppearance.COUI.AppCompatSupport.Toolbar.Title</item>
    </style>
    <style name="Widget.COUI.Toolbar.Button.Navigation" parent="@style/Widget.AppCompatSupport.Toolbar.Button.Navigation">
        <item name="android:paddingLeft">@dimen/coui_action_bar_navigation_padding_end_material</item>
        <item name="android:paddingRight">@dimen/coui_action_bar_navigation_padding_start_material</item>
    </style>
</resources>
